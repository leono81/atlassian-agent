# .streamlit/secrets.toml.example
# Configuración de secretos para Streamlit Community Cloud
# IMPORTANTE: Configura estos valores en la interfaz web de Streamlit Cloud

# === AUTENTICACIÓN GOOGLE OAUTH2 ===
[auth]
# URL de redirección - CAMBIAR por tu URL de Streamlit Cloud
redirect_uri = "https://TU-APP-STREAMLIT.streamlit.app/oauth2callback"

# Secret para cookies - generar uno aleatorio de 32 caracteres
cookie_secret = "GENERAR_SECRET_ALEATORIO_32_CHARS"

# Credenciales de Google Cloud Console
client_id = "TU_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
client_secret = "TU_GOOGLE_CLIENT_SECRET"

# URL de metadatos (no cambiar)
server_metadata_url = "https://accounts.google.com/.well-known/openid-configuration"

# === CONFIGURACIÓN DE APIS ===
# OpenAI
OPENAI_API_KEY = "sk-..."

# Logfire (opcional)
LOGFIRE_TOKEN = "tu_logfire_token"

# Mem0 (opcional)
MEM0_API_KEY = "tu_mem0_api_key"

# Atlassian
ATLASSIAN_URL = "https://tu-dominio.atlassian.net"
ATLASSIAN_USERNAME = "tu-email@empresa.com"
ATLASSIAN_API_TOKEN = "tu_atlassian_api_token"

# Configuración de zona horaria
TIMEZONE = "Europe/Madrid" 