redirect_uri = "http://localhost:8501/oauth2callback"

# Secret para firmar cookies (GENERAR UNO NUEVO - ver SETUP_OAUTH.md)
cookie_secret = "REEMPLAZA_CON_UN_SECRET_ALEATORIO_DE_32_CARACTERES"

# Credenciales de Google OAuth2 (obtener de Google Cloud Console)
client_id = "TU_GOOGLE_CLIENT"
client_secret = "TU_GOOGLE_SECRET"

# URL de metadatos de Google (NO CAMBIAR)
server_metadata_url = "https://accounts.google.com/.well-known/openid-configuration"

